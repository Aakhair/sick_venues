

<% if user_signed_in?%>
  <div class="modal fade" id="new_booking_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Just one more step to book your dream castle!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= simple_form_for [@venue, @reservation] do |f| %>
          <div class="modal-body">
          <%= f.input :date, html5: true %>
          <%= f.button :submit %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Close</button>
          </div>
         <% end %>
      </div>
    </div>
  </div>
<% end %>


<div class="modal fade" id="new_booking_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Not logged in yet!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body mt-4">
          <%= form_with url: new_user_session_path, method: :get do |f| %>
            <%= f.hidden_field :venue_id, value: @venue.id, class: "d-none" %>
            <%= submit_tag "Please sign in to proceed booking", class: "btn banner-btn mt-6" %>
          <% end %>
        </div>
        <div class="modal-footer">
          <input hidden="true" value="<%=params[:id]%>">
          <button type="button" class="btn btn-ghost" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

