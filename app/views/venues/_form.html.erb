<div class="row justify-content-center">
  <div class="form-new-venue col-6 mt-5">
    <%= simple_form_for(@venue) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title, :label => 'The name of the Venue' %>
        <%= f.input :description, :as => :text, :label => 'Describe the Venue'%>
        <%= f.input :location, :label => 'Where is it?' %>
        <div class="d-flex justify-content-between">
          <%= f.input :capacity, :as => :integer, :hint => 'Type a Number please.' %>
          <%= f.input :category, collection: Venue::CATEGORIES %>
          <%= f.input :price, :as => :float, :label => 'Price per night', :placeholder => '129.99' %>
        </div>
        <%= f.input :photo, as: :file, :inline_label => 'Yes, remember me'  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
