<div class ="container_category mb-4">
<h3 class="text-center mt-5 mb-3">Find the perfect castle for you</h3>

<div class="form-container d-flex justify-content-center">
  <%= form_with url: venues_path, method: :get, class: "search-form d-flex justify-center mb-5" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"
    %>
    <%= submit_tag "Search", class: "btn btn-flat" %>
  <% end %>
</div>

  <div class="cards_list mb-4">
    <div class="card_index 1">
      <div class="card_image"> <%= image_tag "outdoor.png" %> </div>

      <div class="card_title title_white">
      </div>
    </div>

    <div class="card_index 2">
      <div class="card_image">
        <%= image_tag "wedding.png" %>
        </div>
      <div class="card_title title_white">
      </div>
    </div>

    <div class="card_index 3">
      <div class="card_image">
        <%= image_tag "dog.png" %>
      </div>
      <div class="card_title">
      </div>
    </div>

    <div class="card_index 4">
      <div class="card_image">
        <%= image_tag "bday.png" %>
      </div>
      <div class="card_title title_black">
      </div>
    </div>

    <div class="card_index 4">
      <div class="card_image">
        <%= image_tag "grad.png" %>
      </div>
      <div class="card_title title_black">
      </div>
    </div>
  </div>


 <div class="row dflex justify-content-center">
    <% @venues.each do |venue| %>
      <div class="card m-3 rounded-20" style="width: 18rem;">
        <%= link_to venue_path(venue), class:"text-decoration-none" do %>
          <div class="card-img-top text-info text-white", style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path venue.photo.key, height: 300, width: 400, crop: :fill %>); background-position: center; background-size:cover">
                <div class="card-body rounded-20">
                    <h5 class="card-title text-white">
                    <%=venue.title%>
                    </h5>
                    <h2 class="card-text text-info mt-2 text-nowrap ml-auto text-white">€ <%=venue.price.floor%></h2>
                  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                </div>
              </div>
        <% end %>
