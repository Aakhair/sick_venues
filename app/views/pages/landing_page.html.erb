
<section id="title">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= image_path "castle-landscape.png" %>');">
    <div class="container text-center">
      <h1>Find the most amazing places for your events</h1>
      <%= link_to 'Start now', venues_path, class:"btn btn-outline-light btn-lg" %>
    </div>
  </div>

</section>


<section id="features" class="container text-center">
  <div class="row">
    <div class="feature-card col">
      <i class="feature-icon fa-solid fa-earth-europe"></i>
      <h3>All around the world</h3>
      <p>Use remarkable medieval castles from all over the globe as an unforgettable venue.</p>
    </div>
    <div class="feature-card col">
      <i class="feature-icon fa-solid fa-arrow-pointer"></i>
      <h3>Easy to use</h3>
      <p>Search, check the details and book it! Have questions? Contact the owner directly.</p>
    </div>
    <div class="feature-card col">
      <i class="feature-icon fa-solid fa-heart"></i>
      <h3>Perfect for your needs</h3>
      <p>Breathtaking view for a wild bachelor party? We got you covered.</p>
    </div>
  </div>

</section>


<section id="testimonials">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <h2>"I no longer have to play in dirty dog parks. I've found the best jumping castle to play with my friends. Woof."</h2>
        <%= image_tag "dog-img.jpg", class:"testimonial-image" %>
        <p class="text-white">Pebbles, New York</p>
      </div>
      <div class="carousel-item">
        <h2 class="testimonial-text">"Sick Venues made it easy to find an incredible castle in the south of France for my wedding."</h2>
        <%= image_tag "lady-img.jpg", class:"testimonial-image" %>
        <em>Beverly, Illinois</em>
      </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
        data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>
</section>

<section id="footer">
<a href="#"><i class="footer-icon fa-brands fa-instagram"></i></a>
<a href="#"><i class="footer-icon fa-brands fa-facebook-f"></i></a>
<a href="#"><i class="footer-icon fa-brands fa-twitter"></i></a>
</section>
